<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: "false" }) do |f| %>
  <%= render "application/error_messages", object: resource %>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Send me reset password instructions", class: "btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
